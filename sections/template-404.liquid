<div><h1> {{ section.settings.title }} </h1>
<p> {{ section.settings.subtext_title }}</p>
</div>

<div class="my-4">
    <a href="{{}}">
        {{ section.settings.button_label }}
    </a>
</div>
{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading Title"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "default": "The page you are looking is not found",
      "label": "404 Subtext Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Go to home page",
      "label": "404 Subtext Title"
    }
  ]
}
{% endschema %}